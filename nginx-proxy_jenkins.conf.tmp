server {

    charset utf-8;

    listen       ip:80;
    listen       ip:443 ssl;
    server_name  jenkins.xxx.com;

    ssl_certificate     /etc/nginx/ssl/jenkins/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/jenkins/privkey.pem;

    ssl_ciphers         HIGH:!aNULL:!MD5;
    ssl_protocols       SSLv3 TLSv1 TLSv1.1 TLSv1.2;

    ssl_session_cache   shared:SSL:10m;
    ssl_session_timeout 30m;


    if ($scheme = http) {
       return 301 https://$server_name$request_uri;
    }

    gzip             on;
    gzip_comp_level  4;
    gzip_min_length  1024;
    gzip_disable     "msie6";
    gzip_types       text/plain text/css text/js text/javascript application/javascript application/json;
    gzip_buffers     16 8k;

    access_log /var/log/nginx/jenkins_access.log main;
    error_log  /var/log/nginx/jenkins_error.log error;

    location / {
        index  index.php index.html index.htm index.shtml;

        if ($http_user_agent ~ (libwww|Wget|LWP|damnBot|BBBike|java|spider|crawl) ) {
            return 403;
        }

        index index.html index.htm index.shtml;

        proxy_pass       http://ip:8080;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;

        proxy_connect_timeout      60s;
        proxy_send_timeout         60s;
        proxy_read_timeout         60s;

        proxy_buffering on;
        proxy_buffer_size          8k;
        proxy_buffers              8 8k;
        proxy_busy_buffers_size    32k;
        proxy_temp_file_write_size 32k;
    }

    error_page   500 502 503 504  /50x.php;

    location ~ /\.ht {
        deny all;
    }

    location ~ /.git {
        deny all;
    }

    location ~ /.well-known {
        allow all;
    }
}
