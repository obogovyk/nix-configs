port 1194
proto tcp
dev tun
ca ca.crt
cert server.crt
key server.key
dh dh2048.pem
server 10.0.10.0 255.255.255.0
ifconfig-pool-persist ipp.txt
push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS 8.8.8.8"
push "dhcp-option DNS 8.8.4.4"
keepalive 10 60
tls-auth ta.key 0
cipher DES-EDE3-CBC
comp-lzo
max-clients 5
user nobody
group nobody
persist-key
persist-tun
log openvpn.log
log-append openvpn.log
status openvpn-status.log
verb 3

=== other (with routes) ===
port 1194
proto tcp
dev tun

ca ca.crt
cert server.crt
key server.key
dh dh2048.pem

topology subnet
server 172.16.1.0 255.255.255.0
ifconfig-pool-persist ipp.txt
push "route 192.168.2.0 255.255.255.0"

push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS 8.8.8.8"
push "dhcp-option DNS 8.8.4.4"

client-to-client
keepalive 20 60

tls-auth ta.key 0
comp-lzo
max-clients 10

persist-key
persist-tun

log-append /var/log/openvpn.log

verb 3
