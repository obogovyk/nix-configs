-A INPUT -i lo -j ACCEPT
-A INPUT -i eth0 -j BLACKLIST
-A INPUT -i eth0 -p tcp -m conntrack --ctstate NEW -m tcp ! --tcp-flags FIN,SYN,RST,ACK SYN -j DROP
-A INPUT -i eth0 -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A INPUT -i eth0 -p icmp -m limit --limit 10/sec --limit-burst 20 -j ACCEPT
-A INPUT -i eth0 -p tcp -m conntrack --ctstate NEW -m multiport --dports 80,443 -j LOG --log-prefix "WebaAccess: " --log-level 4
-A INPUT -i eth0 -p tcp -m tcp --dport 80 -m conntrack --ctstate NEW -m limit --limit 1000/sec --limit-burst 1200 -j ACCEPT
-A INPUT -i eth0 -p tcp -m tcp --dport 443 -m conntrack --ctstate NEW -m limit --limit 1000/sec --limit-burst 1200 -j ACCEPT
-A INPUT -i eth0 -p tcp -m conntrack --ctstate NEW -m tcp --dport 2218 -j ACCEPT
-A INPUT -j REJECT --reject-with icmp-host-prohibited
---
# BLACKLIST EXAMPLE
-A BLACKLIST -s 218.27.xx.xxx/32 -i eth0 -p tcp -m tcp --dport 2218 -j REJECT --reject-with icmp-host-prohibited
