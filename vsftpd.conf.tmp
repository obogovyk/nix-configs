# Example config file /etc/vsftpd/vsftpd.conf

anonymous_enable=NO
anon_mkdir_write_enable=NO

local_enable=YES
write_enable=YES

local_umask=022

dirmessage_enable=YES

# Activate logging
#xferlog_file=/var/log/xferlog
#xferlog_std_format=NO

xferlog_enable=YES
xferlog_std_format=NO
log_ftp_protocol=YES
vsftpd_log_file=/var/log/vsftpd.log

connect_from_port_20=YES

# === Passive mode configuration (optional) ===
#pasv_enable=YES
#pasv_min_port=1024
#pasv_max_port=1048
#pasv_address=52.4.29.60

# You may change the default value for timing out an idle session.
#idle_session_timeout=600

# You may change the default value for timing out a data connection.
#data_connection_timeout=120

# ASCII mangling is a horrible feature of the protocol.
#ascii_upload_enable=YES
#ascii_download_enable=YES

ftpd_banner=Welcome to OpenSoft FTP-server. All your activity is logged.
#banned_email_file=/etc/vsftpd/banned_emails

# You may specify an explicit list of local users to chroot() to their home
#directory. If chroot_local_user is YES, then this list becomes a list of
#users to NOT chroot().
#(Warning! chroot'ing can be very dangerous. If using chroot, make sure that
#the user does not have write access to the top level directory within the
#chroot)

chroot_local_user=YES
allow_writeable_chroot=YES
#chroot_list_enable=YES
#chroot_list_file=/etc/vsftpd/chroot_list

listen=YES
listen_address=0.0.0.0 #all addresses

#listen_ipv6=YES

pam_service_name=vsftpd
userlist_enable=YES
tcp_wrappers=YES

# === SSL/TLS Configuration ===

# chmod 600 /etc/pki/tls/certs/opensoft.com.pem
# chown root:root /etc/pki/tls/certs/private/opensoft.com.key

#ssl_enable=YES
#ssl_sslv2=YES
#ssl_sslv3=YES
#ssl_tlsv1=YES
#require_ssl_reuse=NO
#ssl_ciphers=HIGH
#allow_anon_ssl=NO

#force_local_data_ssl=NO
#force_local_logins_ssl=YES

# Certificate files
#rsa_cert_file=/etc/pki/tls/certs/opensoft.com.pem
#rsa_private_key_file=/etc/pki/tls/certs/private/opensoft.com.key
